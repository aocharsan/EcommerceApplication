@model IEnumerable<Product>

 <div class="row pb-3" >

        @foreach(var product in Model)
       {

        <div class="col-lg-3 d-flex align-items-stretch">
           <div class="row p-2">
               <div class="col-12 p-1">

                    <div class="card card-block h-100 border-0 p-3 shadow border-top border-5 rounded">

                       <img src="@product.Imageurl" class="card-img-top rounded"/>
                        <div class="card-body  pb-0">
                           <div class="pl-1">
                             <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                             <p class="card-title text-warning text-center">by <b>@product.Author</b></p>

                           </div>
                            <div class="pl-1">
                                <p class=" text-dark text-opacity-75  text-center mb-0">
                                    MRP: ₹<span class="text-decoration-line-through">@product.ListPrice.ToString() </span>
                                 </p>
                               

                            </div>
                            <div class="pl-1">
                                <p class=" text-dark text-opacity-75  text-center">
                                    As low as: ₹<span>@product.Price100.ToString() </span>
                                </p>
                            </div>

                          

                       </div>
                       <div >
                            <a asp-action="Details" asp-route-prodId="@product.Id" 
                               class="btn btn-primary bg-gradient border-0 form-control">
                               Details
                            </a>

                       </div>

                   </div>

                </div>

              
            </div>

       </div>  
       
       }
 </div>

