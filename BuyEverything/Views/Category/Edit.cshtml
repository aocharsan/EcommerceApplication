@model Category
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<div class="card shadow border-0 mt-4">
    <div class="card card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating col-12 py-2">
                <input asp-for="Name" class="form-control border-0 shadow" readonly>
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class="form-floating col-12 py-2">
                <input asp-for="DisplayOrder" class="form-control border-0 shadow">
                <label asp-for="DisplayOrder" class="ms-2"></label>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary ">Back to List</a>
                </div>
            </div>

        </form>


    </div>

</div>






